:root{--primary-color:#007cba;--primary-color-hover:#005a9c;--text-color:#32373c;--background-color:#f1f1f1;--border-color:#ccc;--table-header-bg:#f9f9f9;--border-radius:5px;--spacing:15px;--font-weight-bold:bold}.fs-seo-ilj-tab-wrapper{margin-top:var(--spacing)}.fs-seo-ilj-tab-wrapper .nav-tab-wrapper{margin-bottom:var(--spacing)}.fs-seo-ilj-tab-wrapper .nav-tab{color:var(--primary-color);font-weight:var(--font-weight-bold);transition:color .3s,background .3s}.fs-seo-ilj-tab-wrapper .nav-tab.nav-tab-active{background:#fff;color:var(--text-color);border:1px solid var(--border-color);border-bottom:none}.fs-seo-ilj-tab-wrapper .nav-tab:hover{color:var(--primary-color-hover);background:var(--background-color)}.fs-seo-ilj-filter-form{margin-bottom:var(--spacing);padding:var(--spacing);background:var(--background-color);border:1px solid var(--border-color);border-radius:var(--border-radius);display:flex;flex-wrap:wrap;align-items:center;gap:var(--spacing)}.fs-seo-ilj-filter-form label{display:block;margin-bottom:5px;font-weight:var(--font-weight-bold)}.fs-seo-ilj-filter-form input[type=text],.fs-seo-ilj-filter-form select{flex:1;min-width:200px;padding:8px;border:1px solid var(--border-color);border-radius:var(--border-radius);transition:border-color .3s,box-shadow .3s}.fs-seo-ilj-filter-form input:focus,.fs-seo-ilj-filter-form select:focus{border-color:var(--primary-color);box-shadow:0 0 3px var(--primary-color);outline:0}.fs-seo-ilj-filter-form button{background:var(--primary-color);color:#fff;border:none;padding:8px 16px;border-radius:var(--border-radius);cursor:pointer;transition:background .3s}.fs-seo-ilj-filter-form button:hover{background:var(--primary-color-hover)}.fs-seo-ilj-post-list table{width:100%;border-collapse:collapse;margin-top:var(--spacing)}.fs-seo-ilj-post-list td,.fs-seo-ilj-post-list th{padding:10px;border:1px solid var(--border-color);text-align:left}.fs-seo-ilj-post-list th{background:var(--table-header-bg);font-weight:var(--font-weight-bold)}.fs-seo-ilj-post-list td a{color:var(--primary-color);transition:color .3s}.fs-seo-ilj-post-list td a:hover{text-decoration:underline;color:var(--primary-color-hover)}.fs-seo-ilj-post-list .toggle-link{background:var(--primary-color);color:#fff;border:none;padding:6px 12px;border-radius:var(--border-radius);cursor:pointer;transition:background .3s}.fs-seo-ilj-post-list .toggle-link:hover{background:var(--primary-color-hover)}.post-type-tab{padding-top:var(--spacing)}.nav-tab-active{background-color:#fff;border-bottom:1px solid #fff}@media (max-width:768px){.fs-seo-ilj-filter-form{flex-direction:column;align-items:flex-start;gap:10px}.fs-seo-ilj-filter-form button,.fs-seo-ilj-filter-form input[type=text],.fs-seo-ilj-filter-form select{width:100%}.fs-seo-ilj-post-list table td,.fs-seo-ilj-post-list table th{font-size:14px}}